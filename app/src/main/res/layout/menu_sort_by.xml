<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:background="@drawable/alterdialouge"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8dp"
        android:text="Sort By"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <RadioGroup
        android:id="@+id/radioGroup_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioName_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="  Name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radioDate_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="   Date"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radioSize_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="   Size"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:paddingRight="8dp"
        android:layout_marginRight="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroup2_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAscending_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="   Ascending"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioDescending_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="   Descending"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RadioGroup>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:paddingRight="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_button_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text=" Cancel "
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/ok_button_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" Ok "
            android:textAlignment="center"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textSize="20sp"/>



    </LinearLayout>



</LinearLayout>